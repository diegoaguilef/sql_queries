
SELECT *FROM EMPLOYEES;

--MOSTRAR DEL DEPARTAMENTO 80 EL SALARIO MAS ALTO Y MOSTRAR LA COMISION MAS BAJA

SELECT DEPARTMENT_ID,  MIN(COMMISSION_PCT),MAX(SALARY) 
FROM EMPLOYEES 
WHERE DEPARTMENT_ID=80
GROUP BY DEPARTMENT_ID;

--MOSTRAR EL NOMBRE COMPLETO DE LOS EMPLEADOS QUE TIENEN EL SALARIO MAS ALTO DEL DEPARTAMENTO 80;

SELECT FIRST_NAME,LAST_NAME,SALARY
FROM EMPLOYEES
WHERE SALARY=   (SELECT MAX(SALARY)
                 FROM EMPLOYEES 
                 WHERE DEPARTMENT_ID=80);
                 
--MOSTAR EL NOMBRE COMPLETO DE LOS EMPLEADOS QUE NO TIENEN COMISION

SELECT FIRST_NAME,LAST_NAME FROM EMPLOYEES WHERE COMMISSION_PCT IS NULL;

--MOSTAR EL NOMBRE COMPLETO DE LOS EMPLEADOS QUE SI TIENEN COMISION
SELECT FIRST_NAME,LAST_NAME FROM EMPLOYEES WHERE COMMISSION_PCT IS NOT NULL;


--MOSTRAR DEL EMPLEADO QUE MAS TIEMPO TIENE TRABAJANDO EN LA EMPRESA

SELECT EMPLOYEE_ID ,FIRST_NAME,HIRE_DATE FROM EMPLOYEES WHERE HIRE_DATE = (SELECT MIN(HIRE_DATE)FROM EMPLOYEES);
